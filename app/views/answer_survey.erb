<h1><%= @survey.name %></h1>

<% if @already_taken %>
  <%= @already_taken[:message] %>
<% else %>

  <form class="take_survey" method="post" action="/surveys/<%= @survey.id %>">

    <% @survey.questions.each do |question| %>
      <p><%= question.text %></p>

      <br>
      
      <% question.options.each do |option| %>
        <input type="radio" name="options" value="<%= option.id %>"><%= option.text %></input><br>
      <% end %>

    <% end %>

    <input type="submit" value="Submit">
  </form>

<% end %>
